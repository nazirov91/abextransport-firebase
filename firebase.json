{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/contact",
        "function": {
          "functionId": "submitContactForm",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/quote",
        "function": {
          "functionId": "submitQuoteRequest",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
